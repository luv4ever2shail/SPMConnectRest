extends layout

block Users
    label Total： #{data.length}
    hr
    a(href="/users/add", title="title").btn Add 
    table.list
      thead
        tr
          th UserID
          th UserName
          th Name
          th Email
          th Department
          th BlockNo
          th SharesFolder
          
          th 
      each item in data
        tr
          td= item.id 
          td= item.UserName
          td= item.Name
          td= item.Email
          td= item.Department
          td= item.ActiveBlockNumber  
          td= item.SharesFolder
          
          td  
            a(href="/users/edit/"+item.id, title="Edit").icon
              i(aria-hidden="true").fa.fa-pencil-square
            a(href="/users/delete/"+item.id, title="Delete" onclick="return confirm('Delete user： "+item.UserName+" ?');").icon
              i(aria-hidden="true").fa.fa-trash
